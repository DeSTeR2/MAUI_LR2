<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20">

            <!-- Header with Download, Help, and Exit Buttons -->
            <HorizontalStackLayout
                Padding="0,10"
                HorizontalOptions="FillAndExpand"
                Spacing="10"
                VerticalOptions="Start">

                <Button
                    Text="Завантажити"
                    Clicked="OnLoadFileClicked"
                    HorizontalOptions="End" />

                <Button
                    Text="Довідка"
                    Clicked="OnHelpClicked"
                    HorizontalOptions="End" />

                <Button
                    Text="Вихід"
                    Clicked="OnExitClicked"
                    HorizontalOptions="End" />
            </HorizontalStackLayout>

            <Label Text="Оберіть атрибут для пошуку" FontSize="Medium"/>
            <Picker x:Name="AttributePicker" Title="Атрибути" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Пошук" Clicked="OnSearchClicked"/>
                <Button Text="Очистити" Clicked="OnClearClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
